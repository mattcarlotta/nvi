{
    "name": "nvi",
    "version": "0.0.1",
    "description": "Reading and assigning ENVs made blazingly fast.",
    "author": "Matt Carlotta",
    "license": "GPL 3.0",
    "main": "index.js",
    "module": "index.mjs",
    "sideEffects": false,
    "homepage": "https://github.com/mattcarlotta/nvi#readme",
    "bugs": {
        "url": "https://github.com/mattcarlotta/nvi/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:mattcarlotta/nvi.git"
    },
    "engines": {
        "node": ">=18"
    },
    "types": "./index.d.ts",
    "exports": {
        ".": {
            "require": "./index.js",
            "import": "./index.mjs"
        },
        "config": {
            "require": "./config.js",
            "import": "./config.mjs"
        },
        "loadEnvConfig": {
            "require": "./loadEnvConfig.js",
            "import": "./loadEnvConfig.mjs"
        },
        "log": {
            "require": "./log.js",
            "import": "./log.mjs"
        },
        "readEnvFile": {
            "require": "./readEnvFile.js",
            "import": "./readEnvFile.mjs"
        }
    },
    "scripts": {
        "dev": "LOAD_CONFIG=dev NODE_ENV=development ts-node ./src/index.ts",
        "error": "LOAD_CONFIG=error ts-node ./src/index.ts",
        "multiple": "LOAD_CONFIG=multiple ts-node ./src/index.ts",
        "large": "LOAD_CONFIG=large ts-node ./src/index.ts",
        "bench:nvi": "pnpm --stream -r bench:nvi",
        "bench:noshot": "pnpm --stream -r bench:noshot",
        "bench:dotenv": "pnpm --stream -r bench:dotenv",
        "build": "npm run clean && npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc --p ./tsconfig.cjs.json && ts-node ./utils/compressFiles.ts",
        "build:esm": "rollup -c",
        "lint": "eslint ./ --ext .ts,.js",
        "clean": "rimraf nvi bin/**/test_arg bin/**/test_env bin/**/test_load_config *.ts.map config.js index.js loadEnvConfig.js log.js readEnvFile.js *.d.ts *.mjs",
        "test": "NODE_ENV=test DISABLE_LOG=true ts-node ./tests/index.ts",
        "test:logs": "NODE_ENV=test DISABLE_LOG=false ts-node ./tests/index.ts",
        "test:bin": "./nvi --file bin.env --dir tests/envs | ts-node ./tests/bin.spec.ts",
        "test:bin:config": "./nvi --config bin | ts-node ./tests/bin.spec.ts"
    },
    "keywords": [
        "env",
        ".env",
        "environment",
        "variables",
        "config",
        "settings"
    ],
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.1",
        "@types/eslint": "^8.37.0",
        "@types/node": "^18.16.10",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.40.0",
        "prettier": "^2.8.8",
        "rimraf": "^3.0.2",
        "rollup": "^2.79.1",
        "rollup-plugin-typescript2": "^0.31.2",
        "terser": "^5.17.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
