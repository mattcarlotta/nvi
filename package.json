{
    "name": "nvi",
    "version": "0.0.1",
    "description": "Reading and assigning ENVs made blazingly fast.",
    "author": "Matt Carlotta",
    "license": "GPL 3.0",
    "main": "index.js",
    "module": "esm/index.mjs",
    "sideEffects": false,
    "homepage": "https://github.com/mattcarlotta/nvi#readme",
    "bugs": {
        "url": "https://github.com/mattcarlotta/nvi/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:mattcarlotta/nvi.git"
    },
    "engines": {
        "node": ">=18"
    },
    "files": [
        "index.js",
        "index.d.ts",
        "config.js",
        "config.d.ts",
        "loadEnvConfig.js",
        "loadEnvConfig.d.ts",
        "readEnvFile.js",
        "readEnvFile.d.ts",
        "log.js",
        "log.d.ts",
        "esm"
    ],
    "types": "./index.d.ts",
    "exports": {
        ".": "./index.js",
        "./config": "./config.js",
        "./loadEnvConfig": "./loadEnvConfig.js",
        "./readEnvFile": "./readEnvFile.js",
        "./log": "./log.js",
        "./esm": "./esm/index.mjs",
        "./esm/config": "./esm/config.js",
        "./esm/loadEnvConfig": "./esm/loadEnvConfig.mjs",
        "./esm/readEnvFile": "./esm/readEnvFile.mjs",
        "./esm/log": "./esm/log.mjs"
    },
    "scripts": {
        "dev": "LOAD_CONFIG=dev ts-node ./src/index.ts",
        "build": "rollup -c",
        "lint": "eslint ./ --ext .ts,.js",
        "clean": "rimraf config.js index.js loadEnvConfig.js log.js readEnvFile.js *.d.ts *.mjs",
        "test": "ts-node tests/index.ts",
        "format": "prettier -w --plugin-search-dir=. ."
    },
    "keywords": [
        "env",
        ".env",
        "environment",
        "variables",
        "config",
        "settings"
    ],
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.1",
        "@types/eslint": "^8.37.0",
        "@types/node": "^18.16.8",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.40.0",
        "prettier": "^2.8.8",
        "rimraf": "^3.0.2",
        "rollup": "^2.79.1",
        "rollup-plugin-typescript2": "^0.31.2",
        "terser": "^5.17.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
