{
    "bin": {
        "dir": "tests/envs",
        "files": ["bin.env"]
    },
    "bin_test_only": {
        "debug": true,
        "dir": "custom/directory",
        "execute": "bin test",
        "files": ["test1.env", "test2.env", "test3.env"],
        "required": ["TEST1", "TEST2", "TEST3"]
    },
    "dev": {
        "debug": true,
        "dir": "tests/envs",
        "files": [".env"],
        "required": ["BASIC_ENV", "MESSAGE", "MULTI_LINE_KEY", "MONGOLAB_URI"]
    },
    "exe": {
        "debug": true,
        "execute": "npm run dev",
        "files": [".env"]
    },
    "error": {
        "debug": true,
        "dir": "tests/envs",
        "files": ["error.env"]
    },
    "multiple": {
        "debug": true,
        "dir": "tests/envs",
        "files": [".env", "base.env", "directory.env", "reference.env"]
    },
    "large": {
        "debug": true,
        "dir": "benchmarks",
        "files": [".env.interp"]
    },
    "required": {
        "debug": true,
        "dir": "tests/envs",
        "files": [".env"],
        "required": ["ERROR"]
    },
    "test": {
        "debug": true,
        "dir": "tests/envs",
        "files": [".env.base"]
    }
}
