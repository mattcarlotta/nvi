{
    "name": "nvi",
    "version": "0.0.1",
    "description": "Loading ENVs made simple.",
    "main": "index.js",
    "module": "esm/index.mjs",
    "sideEffects": false,
    "homepage": "https://github.com/mattcarlotta/nvi#readme",
    "files": [
        "index.js",
        "index.d.ts",
        "assign/index.js",
        "assign/index.d.ts",
        "config/index.js",
        "config/index.d.ts",
        "decrypt/index.js",
        "decrypt/index.d.ts",
        "encrypt/index.js",
        "encrypt/index.d.ts",
        "fileExists/index.js",
        "fileExists/index.d.ts",
        "getFilePath/index.js",
        "getFilePath/index.d.ts",
        "load/index.js",
        "load/index.d.ts",
        "log/index.js",
        "log/index.d.ts",
        "parse/index.js",
        "parse/index.d.ts",
        "esm"
    ],
    "types": "./index.d.ts",
    "exports": {
        ".": "./index.js",
        "./assign": "./assign/index.js",
        "./config": "./config/index.js",
        "./decrypt": "./decrypt/index.js",
        "./encrypt": "./encrypt/index.js",
        "./fileExists": "./fileExists/index.js",
        "./getFilePath": "./getFilePath/index.js",
        "./load": "./load/index.js",
        "./log": "./log/index.js",
        "./parse": "./parse/index.js",
        "./esm": "./esm/index.mjs",
        "./esm/assign": "./esm/assign/index.mjs",
        "./esm/config": "./esm/config/index.mjs",
        "./esm/decrypt": "./esm/decrypt/index.mjs",
        "./esm/encrypt": "./esm/encrypt/index.mjs",
        "./esm/fileExists": "./esm/fileExists/index.mjs",
        "./esm/getFilePath": "./esm/getFilePath/index.mjs",
        "./esm/load": "./esm/load/index.mjs",
        "./esm/log": "./esm/log/index.mjs",
        "./esm/parse": "./esm/parse/index.mjs"
    },
    "scripts": {
        "parser": "ts-node fileParser/index.ts",
        "build": "tsc --p ./ts/tsconfig.cjs.json && ts-node ./utils/compress.ts",
        "build:esm": "rollup -c",
        "build:types": "tsc --p ./ts/tsconfig.types.json",
        "lint": "eslint ./ --ext .ts,.js",
        "clean:build": "ts-node ./utils/removeBuild.ts",
        "clean:all": "npm run clean:build && npm run clean:esm",
        "clean:esm": "rimraf esm",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:watch": "jest --watchAll",
        "format": "prettier -w --plugin-search-dir=. ."
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/mattcarlotta/nvi.git"
    },
    "keywords": [
        "env",
        ".env",
        "environment",
        "variables",
        "config",
        "settings"
    ],
    "author": "Matt Carlotta",
    "license": "GPL 3.0",
    "bugs": {
        "url": "https://github.com/mattcarlotta/nvi/issues"
    },
    "engines": {
        "node": ">=16"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.1",
        "@types/eslint": "^8.37.0",
        "@types/node": "^16.18.29",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.40.0",
        "prettier": "^2.8.8",
        "rimraf": "^3.0.2",
        "rollup": "^2.79.1",
        "rollup-plugin-typescript2": "^0.31.2",
        "terser": "^5.17.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "directories": {
        "test": "tests"
    }
}
