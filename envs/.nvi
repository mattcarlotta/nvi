[standard]
debug = true
# comment
dir = "path/to/custom/dir"
# comment
files = [ ".env", "base.env", "reference.env" ] # comment
exec = "bin test" # comment
required = [ 
    "TEST1", 
    "TEST2", 
    "TEST3" 
]
# comment

[condensed]
debug=true
dir="path/to/custom/dir"
files=[".env","base.env","reference.env"]
exec="bin test"
required=["TEST1","TEST2","TEST3"]


[indented]     
    debug=true
    dir="path/to/custom/dir"
    files=[".env", "base.env", "reference.env"]
    exec="bin test"
    required=["TEST1", "TEST2", "TEST3"]
[staggered_with_comments]
    debug = true
        # valid comment
        dir = "custom/directory"
            files = [ "test1.env", "test2.env", "test3.env" ]
                env = "my_env"
                    exec = "bin test"
                        project = "my_project"
                            # valid comment
                            required = [ "TEST1", "TEST2", "TEST3" ]


                [wacky_indentations]
        debug   =   true            
dir=   "path/to/custom/dir"
    files       =[".env"]
            exec    =           "bin test"                                    
required=[       "TEST1",    "TEST2",  "TEST3"]                


# --------------------------------------------- #
# The examples below represent invalid formats  #
# --------------------------------------------- #

# spaces within an environment name
[invalid environment 1]

# spaces within an array's string
[invalid_environment_2]
files = [ "test     example         123.env" ]

# comments after an option
[invalid_environment_3]
files = [".env"] # invalid comment

# empty lines between options
[invalid_environment_4]
debug = true

files = [".env"] 

required = [ "TEST1", "TEST2", "TEST3" ]
