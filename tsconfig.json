{
    "compilerOptions": {
        "diagnostics": true,
        "declaration": true,
        "declarationDir": "./",
        "noEmitOnError": true,
        "allowJs": false,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noEmit": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": false,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2015"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
