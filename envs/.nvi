# --------------------------------------------- #
# The examples below represent accepted formats #
# --------------------------------------------- #

[standard]
debug = true
dir = "path/to/custom/dir"
files = [ ".env", "base.env", "reference.env" ]
exec = "bin test"
required = [ "TEST1", "TEST2", "TEST3" ]

[comments]
# comment
debug = true # comment
# comment
dir = "path/to/custom/dir" # comment
# comment
files = [ ".env", "base.env", "reference.env" ] # comment
# comment
exec = "bin test" # comment
# comment
required = [ 
    "TEST1", 
    "TEST2", 
    "TEST3" 
] # comment
# comment

[condensed]
debug=true
dir="path/to/custom/dir"
files=[".env","base.env","reference.env"]
exec="bin test"
required=["TEST1","TEST2","TEST3"]


[indented]     
    debug=true
    dir="path/to/custom/dir"
    files=[".env", "base.env", "reference.env"]
    exec="bin test"
    required=["TEST1", "TEST2", "TEST3"]
[staggered_with_comments]
    debug = true
        # valid comment
        dir = "path/to/custom/directory"
            env = "my_env"
                exec = "bin test"
                    files = [ "test1.env", "test2.env", "test3.env" ]
                        project = "my_project"
                            # valid comment
                            required = [ "TEST1", "TEST2", "TEST3" ]


                [wacky_indentations]
        debug   =   true            
dir=   "path/to/custom/dir"
    files       =[".env"]
            exec    =           "bin test"                                    
required=[       "TEST1",    "TEST2",  "TEST3"]                


# --------------------------------------------- #
# The examples below represent invalid formats  #
# --------------------------------------------- #

# spaces within an environment name
[invalid environment 1]

# spaces within an array's string
[invalid_environment_2]
files = [ "test     example         123.env" ]

